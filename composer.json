{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "laravel/cashier": "5.0.14",
        "aws/aws-sdk-php-laravel": "~2.0@beta",
        "keen-io/keen-io": "~2.5",
        "bugsnag/bugsnag-laravel": "1.*",
        "maknz/slack": "^1.7",
        "pda/pheanstalk": "~3.0",
        "fzaninotto/faker": "~1.4",
        "spatie/laravel-backup": "^2.8",
        "laravelcollective/html": "5.1.*",
        "laravelcollective/annotations": "5.1.*",
        "league/flysystem-aws-s3-v2": "~1.0",
        "rap2hpoutre/laravel-log-viewer": "0.2.*",
        "barryvdh/laravel-debugbar": "~2.0",
        "graham-campbell/htmlmin": "~3.0",
        "roumen/sitemap": "^2.5",
        "symfony/dom-crawler": "~2.0,>=2.0.5",
        "ext-curl": "*",
        "shuber/curl": "dev-master",
        "league/csv": "~6.0",
        "gentle/bitbucket-api": "^0.7.0",
        "contextio/php-contextio-lite": "1.1",
        "doctrine/dbal": "~2.4",
        "genealabs/laravel-caffeine": "~0.2",
        "spatie/activitylog": "^2.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "justpark/envoyer-deploy": "~1.0",
        "laracasts/generators": "^1.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "CMV\\": "app/",
            "Laravel\\Spark\\": "vendor_cmv/spark/app"
        },
        "files": [
            "app/Misc/Helper.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/CMVTestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
